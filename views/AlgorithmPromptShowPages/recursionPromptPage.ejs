<!DOCTYPE html>
<html lang="en">
<head>

    <!-- head component for prompt page partial import -->
    <%- include('../partials/promptPagesPartials/head.ejs') %>

    <!-- linking to corresponding script page paired with db schema instance-->
    <script src = "/scripts/<%=recursionAlgorithm.dir_grabber%>/<%=recursionAlgorithm.file_grabber%>.js" defer></script>

</head>
<body>
    <main class = "prompt recursion">
        <section class = "header">
            <div class = "links-container">
                <span><a href = "/">Homepage</a></span>
                <span> | </span>
                <span><a href = "/recursion/">Recursion Algorithms Index</a></span>
            </div>
            <div class = "title-topic-description-container">
                <div class = "title"> <%= recursionAlgorithm.title %> </div>
                <div class = "topic"> <%= recursionAlgorithm.topic %> </div>
                <div class = "description"> <%= recursionAlgorithm.description %> </div>
            </div>
        </section>
        <section class = "work-space">
            <span class = "visualizer-span">
                <div class = "visualizer-title">Algorithm Visualizer</div>
                <div class = "visualizer-area"></div>
                <div class = "button-container">
                    <button id = 'visualizer-button'>Start Visualizer</button>
                    <button id = 'reset-button'>Reset Visualizer</button>
                </div>
            </span>
            <span class = "code-block-span">
                <div class = 'solution-buttons'>
                    <button id = "show-solution-button">Show Solution</button>
                    <button id = "hide-solution-button">Hide Solution</button>
                </div>               
                <% for (let i = 0; i < recursionAlgorithm.solution.length; i++){ %>
                    <div class = "scriptLines"> 
                        <%= recursionAlgorithm.solution[i] %>
                    </div>    
                <% } %> 
            </span>
        </section>
    </main>
</body>
</html>